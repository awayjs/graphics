{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "lib": ["es5", "DOM", "ES2017", "ScriptHost"],
    "moduleResolution": "node",
    "noImplicitUseStrict": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}